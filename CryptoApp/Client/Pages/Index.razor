@page "/"
@using Microsoft.AspNetCore.Authorization;
@using MudBlazor
@inject NavigationManager NavigationManager
@attribute [Authorize]

<PageTitle>Index</PageTitle>

<MudPaper Class="p-4" Elevation="3">
    <MudText Typo="Typo.h3" Class="text-center">Welcome to BlazorCryptoApp!</MudText>
    <MudText Typo="Typo.h6" Class="text-center my-4">Your go-to solution for all cryptographic needs. Hash, sign, encrypt, and more!</MudText>
    <MudDivider></MudDivider>
    <MudText Typo="Typo.body1" Class="text-center my-4">Choose an option from the navigation menu, or use one of the quick start buttons below to dive in.</MudText>
    <MudGrid Justify="Justify.Center">
        <MudItem xs="4" md="2">
            <MudButton Color="Color.Primary" Variant="Variant.Filled" FullWidth="true" OnClick="@(() => NavigateTo(hash))">Hash</MudButton>
        </MudItem>
        <MudItem xs="4" md="2">
            <MudButton Color="Color.Secondary" Variant="Variant.Filled" FullWidth="true" OnClick="@(() => NavigateTo(signature))">Signature</MudButton>
        </MudItem>
        <MudItem xs="4" md="2">
            <MudButton Color="Color.Success" Variant="Variant.Filled" FullWidth="true" OnClick="@(() => NavigateTo(encryption))">Encrypt</MudButton>
        </MudItem>
        <MudItem xs="4" md="2">
            <MudButton Color="Color.Tertiary" Variant="Variant.Filled" FullWidth="true" OnClick="@(() => NavigateTo(sslCertificate))">SSL Certificate</MudButton>
        </MudItem>
    </MudGrid>
</MudPaper>

@code {
    private const string hash = "hash";
    private const string signature = "signature";
    private const string encryption = "encryption";
    private const string sslCertificate = "sslcertficate";

    private void NavigateTo(string route)
    {
        NavigationManager.NavigateTo($"/{route}");
    }
}


